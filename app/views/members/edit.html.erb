<%= link_to("<< Back to List", {:action => 'index'} , :class => 'back-to-link') %>

<div class= "members edit">
<h2>Edit Member</h2>

<%= form_for(:member, :url => {:action => 'update', :id => @member.id}) do |f| %>

	<table summary="Member form fields">
	<%= error_messages_for(@member) %>
	<tr>
		<th>E-Mail</th>
		<td><%= f.text_field(:email) %></td>
	</tr>
	
		<tr>
		<th>Name</th>
		<td><%= f.text_field(:name) %></td>
	</tr>

		<tr>
		<th>Password</th>
		<td><%= f.password_field(:password) %></td>
	</tr>

	<tr>
		<th>Confirm Password</th>
		<td><%= f.password_field :password_confirmation %></td>
	</tr>
</table>

<div class="form-buttons">

<%= submit_tag("Edit Member") %>

</div>

<% end %>
</div>



